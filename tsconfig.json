{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2019",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/", "src/**/*.test.ts"]
}
